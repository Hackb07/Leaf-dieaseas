import torch
import torch.nn as nn
import torch.optim as optim
import torch.nn.functional as F
import torchvision.models as models
import torchvision.transforms as transforms
import torchvision.datasets as datasets
from torch.utils.data import DataLoader
from torchvision.models.feature_extraction import create_feature_extractor

# Device Configuration
device = torch.device("cuda" if torch.cuda.is_available() else "cpu")

# Data Preprocessing
transform = transforms.Compose([
    transforms.Resize((299, 299)),  # Required size for InceptionV3
    transforms.ToTensor(),
    transforms.Normalize([0.485, 0.456, 0.406], [0.229, 0.224, 0.225])  # Standard ImageNet normalization
])

# Load Dataset
train_dataset = datasets.FakeData(transform=transform)  # Replace with your dataset
train_loader = DataLoader(train_dataset, batch_size=32, shuffle=True)

# Define Hybrid Model
class HybridModel(nn.Module):
    def __init__(self, num_classes=10):  # Adjust num_classes as needed
        super(HybridModel, self).__init__()

        # Load Pretrained MobileNetV2
        mobilenet = models.mobilenet_v2(pretrained=True)
        self.mobilenet_features = nn.Sequential(*list(mobilenet.features.children()))
        self.adaptive_pool_mobilenet = nn.AdaptiveAvgPool2d((1, 1))

        # Load Pretrained InceptionV3
        inception = models.inception_v3(pretrained=True, aux_logits=False)  # Disable auxiliary outputs
        self.inception_features = create_feature_extractor(inception, return_nodes={'avgpool': 'features'})
        self.adaptive_pool_inception = nn.AdaptiveAvgPool2d((1, 1))

        # Define Fully Connected Layers
        mobilenet_out = 1280  # MobileNetV2 final output channels
        inception_out = 2048  # InceptionV3 final output channels
        combined_features = mobilenet_out + inception_out

        self.fc1 = nn.Linear(combined_features, 512)
        self.fc2 = nn.Linear(512, num_classes)
        self.relu = nn.ReLU()

    def forward(self, x):
        # Extract features from MobileNetV2
        mobilenet_features = self.mobilenet_features(x)
        mobilenet_features = self.adaptive_pool_mobilenet(mobilenet_features)
        mobilenet_features = mobilenet_features.view(mobilenet_features.size(0), -1)

        # Extract features from InceptionV3
        inception_features = self.inception_features(x)['features']
        inception_features = self.adaptive_pool_inception(inception_features)
        inception_features = inception_features.view(inception_features.size(0), -1)

        # Concatenate features
        combined = torch.cat((mobilenet_features, inception_features), dim=1)
        x = self.relu(self.fc1(combined))
        x = self.fc2(x)
        return x

# Initialize and move model to device
hybrid_model = HybridModel(num_classes=10).to(device)

# Loss and Optimizer
criterion = nn.CrossEntropyLoss()
optimizer = optim.Adam(hybrid_model.parameters(), lr=0.001)

# Training Loop
def train_model(model, train_loader, num_epochs=10):
    model.train()
    for epoch in range(num_epochs):
        total_loss = 0.0
        for images, labels in train_loader:
            images, labels = images.to(device), labels.to(device)

            optimizer.zero_grad()
            outputs = model(images)
            loss = criterion(outputs, labels)
            loss.backward()
            optimizer.step()

            total_loss += loss.item()

        print(f"Epoch [{epoch+1}/{num_epochs}], Loss: {total_loss/len(train_loader):.4f}")

# Train the model
train_model(hybrid_model, train_loader, num_epochs=10)




